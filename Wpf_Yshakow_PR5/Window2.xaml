            <RowDefinition Height="37*"/>
            <RowDefinition Height="180*"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Grid.Row="0" Grid.RowSpan="2" Margin="5">
        MainWindow
        </TextBlock>
        <Frame Grid.Column="1" Grid.ColumnSpan="2" Source="Page3.xaml" 
               BorderBrush="Black" BorderThickness="2"></Frame>
        <Frame Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Source="Page4.xaml" 
               BorderBrush="Black" BorderThickness="2"></Frame>
        <Frame Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Source="Page5.xaml" 
